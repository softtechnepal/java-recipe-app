<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.recipe.uicontrollers.common.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="60" bottom="60" left="60"/>
            </padding>
            <ImageView fx:id="logoImageView" fitWidth="200.0" preserveRatio="true"/>
            <Label fx:id="titleLabel" textFill="#FFFFFF" text="Welcome to My Recipe"/>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="250.0"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250.0"/>
            <Label fx:id="forgotPasswordLabel" text="Forgot Password?" textFill="#007bff"
                   onMouseClicked="#handleForgotPassword"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="loginButton" text="Login" prefWidth="100.0"/>
            </HBox>
            <Label fx:id="registerLabel" text="Register" textFill="#007bff" onMouseClicked="#handleRegister"
                   alignment="CENTER"/>
        </VBox>
    </center>
    <style>
        -fx-background-color: #293846;
    </style>
</BorderPane>
