<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane id="borderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipe.ui.common.login.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="60" left="60" right="60" top="20"/>
            </padding>
            <ImageView fx:id="logoImageView" fitWidth="200.0" preserveRatio="true"/>
            <Label fx:id="titleLabel" text="Welcome to My Recipe" textFill="#FFFFFF"/>
            <VBox alignment="CENTER">
                <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username"
                           style="-fx-background-radius: 6;"/>
                <Label fx:id="usernameErrorLabel" prefHeight="200.0" prefWidth="200.0" textFill="red"
                       visible="false" managed="false"/>
            </VBox>
            <VBox alignment="CENTER">
                <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password"
                               style="-fx-background-radius: 6;"/>
                <Label fx:id="passwordErrorLabel" prefHeight="200.0" prefWidth="200.0" textFill="red"
                       visible="false" managed="false"/>
            </VBox>
            <Label fx:id="forgotPasswordLabel" onMouseClicked="#handleForgotPassword" text="Forgot Password?"
                   textFill="#007bff"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="loginButton" contentDisplay="TOP" prefHeight="26.0" prefWidth="139.0"
                        style="-fx-background-radius: 6;" text="Login">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <effect>
                        <Blend/>
                    </effect>
                </Button>
            </HBox>
            <Label fx:id="registerLabel" alignment="CENTER" onMouseClicked="#handleRegister" text="Register"
                   textFill="#007bff"/>

            <Label fx:id="guestLabel" alignment="CENTER" onMouseClicked="#handleContinueAsGuest"
                   text="Continue as Guest" textFill="#007bff"/>
        </VBox>
    </center>
    <style>
        -fx-background-color: #293846;
    </style>
</BorderPane>
