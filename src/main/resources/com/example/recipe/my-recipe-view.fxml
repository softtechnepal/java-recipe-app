<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="562.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.recipe.ui.user.MyRecipeController"
            HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <!-- Navigation Bar -->
        <HBox styleClass="elevated-nav-bar" HBox.hgrow="ALWAYS">
            <Label style="-fx-text-fill: black; -fx-font-size: 24; -fx-font-weight: bold;" text="My Recipes"/>
            <padding>
                <Insets bottom="12.0" top="12.0"/>
            </padding>
        </HBox>
        <!-- My Recipes -->
        <ScrollPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" style="-fx-background-color: white"
                    styleClass="no-scroll-bars">
            <GridPane fx:id="menuGrid" style="-fx-background-color: white" hgap="16" vgap="16">
            </GridPane>
        </ScrollPane>
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
        </padding>
    </VBox>
</AnchorPane>
