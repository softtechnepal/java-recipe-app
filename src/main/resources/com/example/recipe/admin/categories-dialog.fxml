<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipe.ui.admin.CategoryDialogController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label fx:id="dialogTitle" text="Category Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="categoryNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="table-header-search"/>
    <Button fx:id="dialogButton" onAction="#handleSubmit"
           text="Add"  GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" style="-fx-background-color: green; -fx-text-fill: white" />
</GridPane>
