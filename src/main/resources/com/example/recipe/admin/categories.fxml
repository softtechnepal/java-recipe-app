<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipe.ui.admin.CategoryController">
    <HBox alignment="TOP_RIGHT" prefHeight="26.0" prefWidth="500.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
        </padding>
        <Button alignment="CENTER" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" onMouseClicked="#handleAddCategory" style="-fx-background-color: #6C946F;" text="Add New Category" textAlignment="RIGHT" textFill="WHITE">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </Button>
    </HBox>

    <TableView fx:id="categoryTable" layoutY="47.0" prefHeight="307.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="categoryId" prefWidth="81.6" text="Category Id" />
            <TableColumn fx:id="categoryName" prefWidth="268.8" text="Category Name" />
            <TableColumn fx:id="actions" prefWidth="152.0" text="Actions" />
        </columns>
    </TableView>

</AnchorPane>
