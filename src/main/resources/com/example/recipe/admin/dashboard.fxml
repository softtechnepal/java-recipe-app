<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="1680" prefWidth="1680" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.recipe.ui.admin.DashboardController" >
    <center>
        <HBox spacing="15" style="-fx-padding: 25px 18px" >
            <VBox alignment="CENTER" styleClass="dashboard-pane">
                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="dashboard-pane-image">
                    <image>
                        <Image url="@../../../../assets/users.png" />
                    </image>
                </ImageView>
                <Text text="Total Users" styleClass="dashboard-pane-title"/>
                <Text fx:id="totalUsers" styleClass="dashboard-pane-value"/>
            </VBox>

            <VBox alignment="CENTER" styleClass="dashboard-pane">
                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="dashboard-pane-image">
                    <image>
                        <Image url="@../../../../assets/category.png" />
                    </image>
                </ImageView>
                <Text text="Total Categories" styleClass="dashboard-pane-title"/>
                <Text fx:id="totalCategories" styleClass="dashboard-pane-value"/>
            </VBox>

            <VBox alignment="CENTER" styleClass="dashboard-pane">
                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="dashboard-pane-image">
                    <image>
                        <Image url="@../../../../assets/receipe.png" />
                    </image>
                </ImageView>
                <Text text="Total Recipes" styleClass="dashboard-pane-title"/>
                <Text fx:id="totalRecipes" styleClass="dashboard-pane-value"/>
            </VBox>

            <VBox alignment="CENTER" styleClass="dashboard-pane">
                <ImageView pickOnBounds="true" preserveRatio="true" styleClass="dashboard-pane-image">
                    <image>
                        <Image url="@../../../../assets/receipe.png" />
                    </image>
                </ImageView>
                <Text text="Total Saved Recipes" styleClass="dashboard-pane-title"/>
                <Text  text="hehe" styleClass="dashboard-pane-value"/>
            </VBox>
        </HBox>
    </center>

    <top>
        <VBox styleClass="table-header" BorderPane.alignment="TOP_LEFT">
            <children>
                <Text styleClass="table-header-main" text="Application Overview" />
                <Text styleClass="table-header-desc" text="This is overview analytics of the application" />
            </children>
        </VBox>
    </top>
</BorderPane>
