<BorderPane prefHeight="1680" prefWidth="1680" xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recipe.ui.user.RecipeDetailController">
<center>
    <VBox fx:id="containerVBox" BorderPane.alignment="CENTER" styleClass="table-container">
        <ImageView fitHeight="300" fitWidth="300" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="https://images.unsplash.com/photo-1464226184884-fa280b87c399" />
            </image>
        </ImageView>
    </VBox>
</center>
<top>
    <VBox styleClass="table-header" BorderPane.alignment="TOP_LEFT">
        <children>
            <Text styleClass="table-header-main" text="Jhol Momo" />
            <Text styleClass="table-header-desc" text="By: Sandip Tamang" />
        </children>
    </VBox>
</top>
    <right>
        <VBox styleClass="table-container" BorderPane.alignment="TOP_LEFT">
            <children>
                <!-- Ingredients Section -->
                <Text styleClass="table-header-main" text="Ingredients" />
                <TableView fx:id="ingredientTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                    <columns>
                        <TableColumn text="Ingredient" prefWidth="220">
                            <cellValueFactory>
                                <PropertyValueFactory property="ingredient" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Quantity" prefWidth="100">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantity" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Unit" prefWidth="100">
                            <cellValueFactory>
                                <PropertyValueFactory property="unit" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>

                <!-- Categories Section -->
                <VBox style="-fx-padding: 20 0 10 0">
                    <Text styleClass="table-header-main" text="Categories" />
                    <VBox fx:id="categoryList"  style="-fx-spacing: 10; -fx-font-size: 16px; -fx-text-fill: #2d2d2d;">
                            <Text text="Appetizer" />
                            <Text text="Main Course" />
                            <Text text="Dessert" />
                            <Text text="Vegan" />
                            <Text text="Gluten-Free" />
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </right>

</BorderPane>
